<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrador.systemaautonica.Main4Activity">

    <GridLayout
        android:id="@+id/gridLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TituloView"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:text="Insertar Imagenes"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="1">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btFoto1"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto" />

                <LinearLayout
                    android:id="@+id/columanInforamcion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:gravity="center"
                        android:text="Insertar Imagenes"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/textDatos1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textDatos2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textDatos3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/btFoto"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                app:srcCompat="@drawable/foto" />

            <LinearLayout
                android:id="@+id/columanInforamcion"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textDatos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:gravity="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textDatos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:gravity="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textDatos3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>


        </GridLayout>

    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:paddingBottom="0dp"
        android:paddingEnd="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <in.goodiebag.carouselpicker.CarouselPicker
            android:id="@+id/carrucelPicke2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="#0000"
            app:items_visible="three"></in.goodiebag.carouselpicker.CarouselPicker>

    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <in.goodiebag.carouselpicker.CarouselPicker
            android:id="@+id/carrucelPicke3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="#0000"
            android:layout_column="0"
            android:layout_row="0"
            app:items_visible="three"></in.goodiebag.carouselpicker.CarouselPicker>

        <Button
            android:id="@+id/idContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Continuar" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>
